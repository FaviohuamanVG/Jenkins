<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Configuración para pruebas unitarias - Solo logs esenciales -->
    
    <!-- Console Appender con formato limpio -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [TEST] %-5level %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File Appender para logs de pruebas -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/test-logs.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Configuración específica de nuestras clases -->
    <logger name="pe.edu.vallegrande.vgmsuser.application.impl.UserManagementServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    
    <logger name="pe.edu.vallegrande.vgmsuser.application.impl.AuthServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    
    <logger name="pe.edu.vallegrande.vgmsuser.application.impl.EmailServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- Reducir logs de framework -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="reactor.netty" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="org.mockito" level="WARN"/>
    
    <!-- Logger root con nivel ERROR para reducir ruido -->
    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    
    <!-- Profile específico para pruebas limpias -->
    <springProfile name="clean-test">
        <!-- En modo clean-test, solo mostrar SUCCESS messages -->
        <logger name="pe.edu.vallegrande.vgmsuser" level="WARN"/>
        <root level="ERROR">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
    
</configuration>