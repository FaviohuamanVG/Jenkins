<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Configuración para pruebas - Mostrar logs con valores realistas -->
    
    <!-- Console Appender con formato limpio -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- Filtrar solo ERROR y WARN para mostrar solo INFO -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>DENY</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [✅] INFO  %logger{30} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Mostrar INFO de nuestras clases -->
    <logger name="pe.edu.vallegrande.vgmsuser.application.impl.UserManagementServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <logger name="pe.edu.vallegrande.vgmsuser.application.impl.AuthServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <logger name="pe.edu.vallegrande.vgmsuser.application.impl.EmailServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Silenciar frameworks -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="reactor.netty" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="org.mockito" level="WARN"/>
    <logger name="ch.qos.logback" level="WARN"/>
    
    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
    
</configuration>